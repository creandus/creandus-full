# Add all the provided users and groups to the system.
#
# $Id$

SCRIPTDIR=${SCRIPTDIR:-@SCRIPTDIR@}

# Load the basic configuration
. "${SCRIPTDIR}/common/config.bash" || exit 1
# Load things like die()
. "${SCRIPTDIR}/common/functions.bash" || exit 1

main() {
	# Read the command line arguments.
	local eusers=${1} egroups=${2} pkgname=${3} userspace=${4} root=${5:-/}

	[[ -z "${pkgname}" ]] && die "missing required arg: pkgname"
	[[ -z "${userspace}" ]] && die "missing required arg: userspace"

	for x in ${egroups} ; do
		"${SCRIPTDIR}/addgroup.bash" "${x}" "${pkgname}" \
			"${userspace}" "${root}" \
			|| die "addgroup ${x} failed"
	done

	for x in ${eusers} ; do
		"${SCRIPTDIR}/adduser.bash" "${x}" "${pkgname}" \
			"${userspace}" "${root}" \
			|| die "adduser ${x} failed"
	done
}

if [[ "${1}" == "--test" ]] ; then
	echo "Syntax OK."
	exit 0
fi

main "$@"
