# Add all the provided users and groups to the system.
#
# $Id$

prefix=@prefix@
datarootdir=@datarootdir@
scriptdir=${SCRIPTDIR:-@datadir@/@PACKAGE@}

# Load the basic configuration
. "${scriptdir}/common/config.bash"
# Load things like die()
. "${scriptdir}/common/functions.bash"

main() {
	# Read the command line arguments.
	local enewusers=${1} enewgroups=${2}
	local pkgname=${3} userspace=${4} root=${5:-/}

	[[ -z "${pkgname}" || -z "${userspace}" ]] \
		|| die "Script expects 4 arguments: \"new users\"" \
			"\"new groups\" pkgname userspace"

	for i in ${enewgroups} ; do
		"${scriptdir}/addgroup.bash" "${i}" "${pkgname}" \
			"${userspace}" "${root}"
	done

	for i in ${enewusers} ; do
		"${scriptdir}/adduser.bash" "${i}" "${pkgname}" \
			"${userspace}" "${root}"
	done
}

if [[ "${1}" == "--test" ]] ; then
	echo "Syntax OK."
	exit 0
fi

main $@
